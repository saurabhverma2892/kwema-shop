<!DOCTYPE html>
<html>
<head>
    <title>Kwema Shop</title>
    <base href="/shop/">
    <%include includes/styles.ejs%>
</head>
<body>
    <%include includes/navbar.ejs %>

    <form action="/shop/paynow" method="POST">
        <div class="uk-width-1-1 padding-sides padding-top-bottom uk-text-center" style="padding-top:120px;">
            <h1>YOUR SHOPPING CART</h1>
            
            <div class="cart-container">
                <div class="uk-grid" data-uk-grid style="padding-top:30px;">
                    <%cartDetails.forEach(function(cart){%>
                        <div class="uk-width-medium-1-2 uk-text-left main-cart-details-list">
                            <div class="cart-product-image inline-block inline-block-top"></div>
                            <div class="inline-block inline-block-top main-cart-details-list-details">
                                <p><b><%=cart.planDetails.design.name%></b> Collection</p>
                                <p><b><%=cart.planDetails.product.name%></b> (<%=cart.planDetails.product.details%>)</p>
                                <p><b><%=cart.planDetails.name%></b> Plan</p>
                                <p><b>Ship:</b> 12 Business Days - <b>Free</b> | <b><a href="/shop/delivery-address">Get Delivery Address</a></b></p>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-2 uk-text-right">$</div>
                    <%})%>
                    
                </div>
            </div>
            <div class="cart-container uk-text-left">
                <h2>SHIPPING</h2>
                <div class="uk-grid" data-uk-grid>
                    
                    <div class="uk-width-medium-1-2 uk-grid" data-uk-grid>

                        <div class="uk-width-small-1-2">
                            <input type="text" name="firstName" placeholder="First Name" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="text" name="lastName" placeholder="Last Name" class="uk-input">
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="number" name="areaCode" placeholder="Area Code" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="number" name="phone" placeholder="Phone" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-1">
                            <input type="text" name="address" placeholder="Address" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="text" name="city" placeholder="City" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="text" name="state" placeholder="State" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-2">
                            <input type="text" name="zipCode" placeholder="Zip Code" class="uk-input" required>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-2 uk-text-left">
                        <p><b>Shipping Notifications</b></p>
                        <p>Shipment notification emails are sent to the billing contact.</p>
                        <p>Another recipient email adress may be added below</p>
                        <div>
                        <input type="text" name="otherEmail" class="uk-input" placeholder="Email (optional)">
                        </div>
                    </div> 
                </div>
            </div>
            <div class="cart-container uk-text-left">
                <h2>PAYMENT</h2>
                <div>
                    <div class="uk-width-1-1">
                        <div style="margin-bottom:10px;">
                            <button class="uk-button choose-payment-type-button active">Credit Card</button>
                            <button class="uk-button choose-payment-type-button">Paypal</button>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-2">
                        <input type="text" name="cardholderName" class="uk-input" placeholder="Cardholder's Name" required>
                    </div>
                    <div class="uk-width-medium-1-2">
                        <input type="number" name="cardNumber" placeholder="Card Number" class="uk-input" required>
                    </div>
                    <div class="uk-1-1 uk-grid" data-uk-grid>
                        <div class="uk-width-small-1-5">
                            <input type="number" name="expiryMonth" placeholder="Month" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-5">
                            <input type="number" name="expiryMonth" placeholder="Month" class="uk-input" required>
                        </div>
                        <div class="uk-width-small-1-5">
                            <input type="number" name="cvv" placeholder="CVV" class="uk-input" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cart-container uk-text-left">
                <h2>TOTAL</h2>
                <div class="uk-grid uk-text-left" data-uk-grid>
                    <div class="uk-width-medium-1-2">
                        <!-- <p class="pink-color"><b>Enter promo Code here</b></p> -->
                    </div>
                    <div class="uk-width-medium-1-2 uk-text-right">
                        <p><b>Subtotal $</b></p>
                        <p><b>Plan $</b></p>
                        <p class="grey"><b>Free Shipping</b></p>
                        <p><b>Order Total $</b></p>
                        <div><button class="uk-button uk-button-primary">PROCEED</button></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    
    
    <%include includes/footer.ejs%>

<%include includes/scripts.ejs%>
<script type="text/javascript">
    
    toggleLogo();

    function toggleLogo(){
            $(".uk-navbar").addClass("active");
            $(".logo-white").hide();
            $(".logo-black").show("slow");
    }

    $(".choose-payment-type-button").click(function(){
        var self = $(this);
        $(".choose-payment-type-button").removeClass("active");
        self.addClass("active");
    })
</script>
</body>
</html>