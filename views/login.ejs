<!DOCTYPE html>
<html>
<head>
    <title>Kwema Shop</title>
    <base href="/shop/">
    <%include includes/styles.ejs%>
</head>
<body>
    <%include includes/navbar.ejs %>

    <div class="uk-width-1-1 padding-sides padding-top-bottom uk-text-center" style="padding-top:120px;">
        <h1>PLEASE LOGIN</h1>
        <div class="uk-grid uk-flex uk-flex-nowrap" data-uk-grid style="padding-top:30px; margin:0px;">
            <div class="uk-width-medium-1-2 register-login-container">
                <div class="login-container">
                    <h4>LOGIN TO ACCOUNT</h4>
                    <form action="/shop/login" method="POST">
                        <div>
                            <input type="text" name="email" placeholder="Email Address*" class="uk-input">
                        </div>
                        <div>
                            <input type="password" name="password" placeholder="password" class="uk-input">
                        </div>
                        <div class="uk-text-left">
                            <p class="pink-color">
                            <a href="/forgot-password">Forgot your Password?</a>
                            </p>
                        </div>

                        <div class="uk-text-center">
                            <input type="checkbox" name="terms" style="display:inline; width:initial !important">I Agree to the terms and conditions
                            <div>
                                <button class="uk-button uk-button-primary">
                                    SIGN IN
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="uk-width-medium-1-2 register-login-container">
                <div class=" uk-flex uk-flex-center uk-flex-middle" style="height:100%">
                    <div class="inline-block">
                        <h2>JOIN THE COMMUNITY</h2>
                        <button class="uk-button uk-button-primary uk-width-1-1">JOIN THE COMMUNITY</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%include includes/footer.ejs%>

<%include includes/scripts.ejs%>
<script type="text/javascript">
    
    toggleLogo();

    function toggleLogo(){
            $(".uk-navbar").addClass("active");
            $(".logo-white").hide();
            $(".logo-black").show("slow");
    }
</script>
</body>
</html>