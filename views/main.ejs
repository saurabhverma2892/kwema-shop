<script type="text/javascript">
    
    $(window).on("scroll", function() {
        toggleLogo();
    });
    toggleLogo();

    function toggleLogo(){
        if($(window).scrollTop() > $(window).height()) {
            $(".uk-navbar").addClass("active");
            $(".logo-white").hide();
            $(".logo-black").show("slow");
        } else {
            $(".uk-navbar").removeClass("active");
            $(".logo-white").show("slow");
            $(".logo-black").hide("slow");
        }
    }
</script>
